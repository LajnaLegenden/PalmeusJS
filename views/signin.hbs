{{!< default}}
<main>
    <div class="container">
        <h1>Sign in</h1>
        {{#if err}}
        <div class="alert alert-danger" role="alert">
            {{err.message}}
        </div>
        {{/if}}
        <form action="/signin" method="POST">
            <div class="form-group">
                <label for="lNe">Username</label>
                <input type="text" autocomplete="current-password" name="username" class="form-control" id="username"
                    placeholder="Username" required>
            </div>
            <div class="form-group">
                <label for="password1">Password</label>
                <input type="password" name="password" class="form-control" autocomplete="password" id="password"
                    placeholder="Password" required>
            </div>
            <input type="hidden" id="returnUrl" value="/">
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</main>